<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="UI.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="UI.MenuFragment"
        android:label="MenuFragment" >
        <action
            android:id="@+id/action_menuFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_menuFragment_to_quotesMenuFragment"
            app:destination="@id/quotesMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/quotesMenuFragment"
        android:name="UI.QuotesMenuFragment"
        android:label="QuotesMenuFragment" >
        <action
            android:id="@+id/action_quotesMenuFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_quotesMenuFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/action_quotesMenuFragment_to_detailQuoteFragment"
            app:destination="@id/detailQuoteFragment" />
        <argument
            android:name="imageID"
            app:argType="integer" />
        <argument
            android:name="characterName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/detailQuoteFragment"
        android:name="UI.DetailQuoteFragment"
        android:label="DetailQuoteFragment" >
        <action
            android:id="@+id/action_detailQuoteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="imageID"
            app:argType="integer" />
        <argument
            android:name="characterName"
            app:argType="string" />
        <action
            android:id="@+id/action_detailQuoteFragment_self"
            app:destination="@id/detailQuoteFragment" />
    </fragment>
</navigation>